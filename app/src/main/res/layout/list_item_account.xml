<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="72dp"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/avatar_image_view"
        android:layout_marginLeft="16dp"
        android:src="@drawable/account_circle_grey"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username"
        android:id="@+id/username_text_view"
        android:paddingLeft="72dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cloud account"
        android:id="@+id/account_type_text_view"
        android:layout_below="@+id/username_text_view"
        android:paddingLeft="72dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/material_grey_600" />
</RelativeLayout>